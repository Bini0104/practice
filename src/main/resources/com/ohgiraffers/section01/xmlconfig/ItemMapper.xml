<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.section01.xmlconfig.ItemMapper">
    <resultMap id="itemResultMap" type="com.ohgiraffers.section01.xmlconfig.ItemDTO">
        <id property="itemId" column="ITEM_ID"/>
        <result property="itemName" column="ITEM_NAME"/>
        <result property="price" column="ITEM_PRICE"/>
        <result property="itemDate" column="ITEM_DATE"/>
        <result property="itemAmount" column="ITEM_AMOUNT"/>
    </resultMap>

    <select id="selectAllItem" parameterType="com.ohgiraffers.section01.xmlconfig.ItemDTO" resultMap="itemResultMap">
        SELECT
               ITEM_ID,
               ITEM_NAME,
               ITEM_PRICE,
               ITEM_DATE,
               ITEM_AMOUNT
          FROM ITEM
      ORDER BY ITEM_ID
    </select>
    <select id="selectItemById" parameterType="com.ohgiraffers.section01.xmlconfig.ItemDTO" resultMap="itemResultMap">
        SELECT
            ITEM_ID,
            ITEM_NAME,
            ITEM_PRICE,
            ITEM_DATE,
            ITEM_AMOUNT
        FROM ITEM
        WHERE ITEM_ID = #{id}
    </select>

    <insert id="insertItem" parameterType="com.ohgiraffers.section01.xmlconfig.ItemDTO">
        INSERT INTO ITEM(
            ITEM_ID,
            ITEM_NAME,
            ITEM_PRICE,
            ITEM_DATE,
            ITEM_AMOUNT
        )
        VALUES (
                  #{itemId},
                  #{itemName},
                  #{price},
                  #{itemDate},
                  #{itemAmount}
                         )
    </insert>

    <update id="updateItem" parameterType="com.ohgiraffers.section01.xmlconfig.ItemDTO">
        UPDATE ITEM
        SET
            ITEM_NAME = #{itemName},
            ITEM_PRICE = #{price},
            ITEM_AMOUNT = #{itemAmount}
        WHERE ITEM_ID = #{itemId}
    </update>

    <delete id="deleteItem" parameterType="_int">
        DELETE
        FROM ITEM
        WHERE ITEM_ID = #{itemId}
    </delete>
</mapper>